{
    // Verilog settings
    "[systemverilog]": {
        "editor.defaultFormatter": "mshr-h.veriloghdl",
        "editor.formatOnSave": true,
    },
    "verilog.linting.linter": "modelsim",
    "verilog.linting.modelsim.work": "sim_build/cli",
    "verilog.languageServer.veribleVerilogLs.enabled": true,
    "verilog.languageServer.veribleVerilogLs.path": "/ubc/ece/home/ugrads/p/pat5546/.local/bin/verible-verilog-ls",
    "verilog.formatting.systemVerilog.formatter": "verible-verilog-format",
    "verilog.formatting.veribleVerilogFormatter.path": "/ubc/ece/home/ugrads/p/pat5546/.local/bin/verible-verilog-format",

     // Python settings
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [88],
        "editor.wordBasedSuggestions": false
    },
    "flake8.args": ["--config=${workspaceFolder}/.flake8"],
    "isort.args": [
        "--settings-file",
        "${workspaceFolder}/.isort.cfg"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
}
